@using WidlyApp2.Models

<h2>@Model.Name</h2>

<ul>

    <li>
        Genre: @Model.Genre.Name
    </li>

    <li>
        Release Date: @Model.ReleaseDate.Day/@Model.ReleaseDate.Month/@Model.ReleaseDate.Year
    </li>

    <li>
        Date Added: @Model.AddDate.Day/@Model.AddDate.Month/@Model.AddDate.Year
    </li>
    <li>
        Number in Stock: @Model.NumberInStock
    </li>

</ul>